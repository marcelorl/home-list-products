{
  "name": "user-account",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:api\" \"npm run start:client\"",
    "start:client": "cd client/ && npm start",
    "start:api": "cd api/ && npm start",
    "lint": "standard \"client/src/**/*.js\" --verbose | snazzy",
    "lint:fix": "standard \"client/src/**/*.js\" --fix --verbose | snazzy"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcelorl/user-account.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marcelorl/user-account/issues"
  },
  "homepage": "https://github.com/marcelorl/user-account#readme",
  "dependencies": {
    "concurrently": "^4.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "lint-staged": "^8.1.3",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "jest",
      "describe",
      "it",
      "xit",
      "expect",
      "FormData",
      "alert",
      "localStorage",
      "beforeEach"
    ]
  }
}
